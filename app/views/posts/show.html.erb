              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email %>
              </div>
            
              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>
            
              <% if Devise.mappings[:user].rememberable? -%>
                <div class="field" id="remember-me-button">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>

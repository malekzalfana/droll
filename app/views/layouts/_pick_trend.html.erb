            <a data-name="random" href="trends/trumpetIsNowPresident" class="pick-trends">/trumpetIsNowPresident</a>
            <a href="/explore"><div id="toggle-pick-trends">Browse Trends<i class="material-icons">keyboard_arrow_right</i></div></a>
        <% end %>

        </div>


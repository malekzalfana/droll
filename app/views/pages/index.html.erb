<div><%= render '/layouts/left' %></div>
<div id="content">
    <% @post.each do |post| %>
        <div class="wrapper">
            <h2 class="post-title"><%= post.title %></h2>
            <%= image_tag post.image.url(:medium), :class => "post-image" %>
            <div class="upvote-downvote-comment">
                <%= link_to like_post_path(post), method: :put, class: 'upvote', remote: true  do %>
                    <span class="upvote">Upvote</span>
                <% end %>
                <%= post.get_upvotes.size %>
                
                <%= link_to dislike_post_path(post), method: :put, class: 'downvote', remote: true  do %>
                    <span class="downvote">Downvote</span>
                <% end %>
                <%= post.get_downvotes.size %>
                 total<%=  post.get_upvotes.size - post.get_downvotes.size %>
                
                <h2><%= post.comments.count %> Comments</h2>
                <div class: 'comments-wrapper'>
                    <%= render post.comments %>
                    <%= simple_form_for([post, post.comments.build]) do |f| %>
                      <%= f.input :comment %>
                      <%= f.submit %>
                    <% end %>
                </div>
                <%= post.impressionist_count(:filter=>:ip_address) %>
                
            </div>
        </div>
    <% end %>
</div>
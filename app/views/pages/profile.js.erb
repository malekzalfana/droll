    var html = $('<%= j render(partial: ('posts/profilepost') ) %>' );
    $('#left-content-profile').append(html)
    $(html).hide()
    var $container = $('#left-content-profile');
    $(document).ready(function(){
      $container.masonry('appended', $(html));

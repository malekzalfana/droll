<% if current_user.following?(@theuser) %>
    $('#current-follow').attr('value', 'following').addClass('post-user-unfollow').removeClass('post-user-follow').attr('id', '')
<% else %>
    $('#current-follow').attr('value', 'follow').removeClass('post-user-unfollow').addClass('post-user-follow').attr('id', '')
<% end %>                                        
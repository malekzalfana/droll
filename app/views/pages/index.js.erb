var html3;
if ( $("#box-5-wrapper").hasClass("active")  ) {
  $('body').removeClass('loadingPost')
  html3 = $('<%= j render :partial => 'posts/newpost', :collection => @newposts %>');
  $('#box-5-wrapper .reco-trend').append(html3);

  <% if @post.next_page %>
    $('#box-5-wrapper .pagination').replaceWith('<%= j will_paginate @newposts %>');
  <% else %>
    //$(window).off('scroll');
    $('.pagination').remove();
  <% end %>


    $(document).ready(function(){
    $("#box-5-wrapper img").lazyload({
    		event: "loadnew"
    	});
    $("#box-5-wrapper img").trigger("loadnew")
  		$content3.masonry('appended', $(html3);
  		$content3.imagesLoaded(function() {
				$content3.masonry({
					itemSelector: '.wrapper-new-2',
					gutter: 35
				});
				});
		})

			setTimeout(function(){
    				$('#box-5-wrapper .wrapper-new-2').removeClass("no-opacity no-click")
    			}, 500)


}
else {
  $('body').removeClass('loadingPost')
  $('#content-full2.new-content').append('<%= j render(@post) %>');
  <% if @post.next_page %>
    $('#content-full2 > .pagination').replaceWith('<%= j will_paginate @post %>');
  <% else %>
    $(window).off('scroll');
    $('.pagination').remove();
  <% end %>
  $("img.post-image").lazyload({
      	threshold: 200,
      	event : "clickedThePost"
  });
  $("img.post-image").trigger("clickedThePost");
}

<div id="cover-photo">
    <%= render '/layouts/follow_button', :user => User.find_by_username(params[:id]) %>
    <% if @user.image.url == "missing.jpg" %>
        <div id="profile-photo" style="background-image: url(/assets/<%= @user.image.url(:thumb) %>)"></div>
    <% else %>
        <div id="profile-photo" style="background-image: url(<%= @user.image.url(:medium) %>)"></div>
    <% end %>    
    <h2 id="username-profile"><%= @username %></h2>
    <h2 id="posts-number"><%= @user.posts.count %> Posts</h2>
    <h2 id="upvotes-number"><%= @user.following.count %> added</h2>
    
</div>
<div id="content">
    <% @post.each do |x| %>
        <div class="wrapper">
            <h2 class="post-title"><%= x.title %></h2>
            <%= image_tag x.image.url(:medium), :class => "post-image" %>
        </div>
    <% end %>
</div>